{
  "compilerOptions": {
      "outDir": "./build",
      "target": "esnext",
      "esModuleInterop": true,
      "jsx": "react",
      "declaration": true,
      "declarationDir": "./types",
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "typeRoots": ["./vendor-types"],
  },
  "include": [
      "./src/**/*",
      "./spec/**/*"
  ],
}